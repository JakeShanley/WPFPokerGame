<UserControl x:Class="WPFPokerGame.Views.PlayerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:data="clr-namespace:WPFPokerGame.Models"
             xmlns:playerdata="clr-namespace:WPFPokerGame.Models"
             xmlns:local="clr-namespace:WPFPokerGame.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <DataTemplate x:Key="HandTemplate">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding Path=FullCardName, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" Margin="0, 5, 4, 5"/>
            </StackPanel>
        </DataTemplate>
    </UserControl.Resources>

    <StackPanel Orientation="Vertical">
        <!--<ListView x:Name="lvCards" ItemsSource="{Binding DisplayHand}" ItemTemplate="{StaticResource HandTemplate}">-->
        <ItemsControl ItemsSource="{Binding Path=Players}">
            <TextBlock Text="{Binding Path=PlayerName, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,4,5"/>
        </ItemsControl>
    </StackPanel>

</UserControl>
